<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsuir.digitalsignalanalyzer" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bsuir.digitalsignalanalyzer.Home_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsuir.digitalsignalanalyzer.SignalActivity_"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.bsuir.digitalsignalanalyzer.SpectrumActivity_"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.lamerman.FileDialog"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bsuir.digitalsignalanalyzer.ChoosePeriodicComponentActivity_"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
