<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.bsuir.digitalsignalanalyzer.ChoosePeriodicComponentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/frequency_to_add"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="@string/periodic_component"
            android:imeOptions="actionDone" />

        <Button
            android:id="@+id/add_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_frequency" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selected_periodic_components"/>

    <ListView
        android:id="@+id/select_periodic_components"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
